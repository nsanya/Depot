<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>

<div class = "cart_title">Your Cart</div>
<table>
	<% @cart.line_items.each do |item| %>
		<tr>
			<td><%= item.quantity %>&times;</td>
			<td><%= item.product.title %></td>
			<td class = "item_price"><%= number_to_currency(item.total_price) %></td>
			<td><%= button_to 'Delete', item, method: :delete, confirm: 'shure?' %></td>
		</tr>
		<% end %>
		<tr class = "total_line" >
			<td colspan = "2">Total</td>
			<td class = "total_cell"><%= number_to_currency(@cart.total_price_cart) %></td>			
		</tr>
		</table>

<%= button_to 'Empty cart', @cart, method: :delete, confirm: 'Are you shure?' %>
 
