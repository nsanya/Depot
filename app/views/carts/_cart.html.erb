<div class = "cart_title">Your Cart</div>
<table>
	<%= render(cart.line_items) %>	
	
	<tr class = "total_line" >
		<td colspan = "2">Total</td>
		<td class = "total_cell"><%= number_to_currency(cart.total_price_cart) %></td>			
	</tr>
</table>

<%= button_to 'Empty cart', cart, method: :delete, data: { confirm: 'Are you sure?' },
				remote: true %>
<%= button_to 'Order', new_order_path, method: :get %>

<%= link_to "Main", store_path%>
<%= cart.id %>



